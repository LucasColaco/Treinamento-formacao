<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <changeSet id="20210719212100-1" author="lucas.colaco">
        <createTable tableName="TB_TAREFA">
            <column name="ID" type="NUMBER(10)"></column>
            <column name="NOME" type="VARCHAR2(255)"></column>
            <column name="DT_INICIO" type="DATE"></column>
            <column name="DT_CONCLUSAO" type="DATE"></column>
            <column name="STATUS" type="VARCHAR2(255)"></column>
            <column name="RESPONSAVEL_ID" type="NUMBER(10)"></column>

        </createTable>
    </changeSet>

    <changeSet id="20210719212100-2" author="lucas.colaco">
        <addNotNullConstraint tableName="TB_TAREFA" columnName="ID"/>
        <addNotNullConstraint tableName="TB_TAREFA" columnName="NOME"/>
        <addNotNullConstraint tableName="TB_TAREFA" columnName="DT_INICIO"/>
        <addNotNullConstraint tableName="TB_TAREFA" columnName="DT_CONCLUSAO"/>
        <addNotNullConstraint tableName="TB_TAREFA" columnName="STATUS"/>
        <addNotNullConstraint tableName="TB_TAREFA" columnName="RESPONSAVEL_ID"/>
    </changeSet>

    <changeSet id="20210719212100-3" author="lucas.colaco">
        <addForeignKeyConstraint baseTableName="TB_TAREFA" baseColumnNames="RESPONSAVEL_ID" constraintName="TAREFA_RESPONSAVEL_FK" referencedTableName="TB_RESPONSAVEL"
                                 referencedColumnNames="ID"/>
    </changeSet>

    <changeSet id="20210719212100-4" author="lucas.colaco">
        <addPrimaryKey tableName="TB_TAREFA" columnNames="ID" constraintName="TAREFA_PK"/>
    </changeSet>

    <changeSet id="20210719212100-5" author="lucas.colaco">
        <createSequence sequenceName="SEQ_TAREFA" incrementBy="1" startValue="1"/>
    </changeSet>
</databaseChangeLog>